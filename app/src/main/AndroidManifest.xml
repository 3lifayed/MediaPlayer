        android:roundIcon="@mipmap/cover_art"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- Developer Info -->
        <meta-data
            android:name="com.example.developer"
            android:value="Ali Fayed" />
        <meta-data
            android:name="com.example.copyright"
